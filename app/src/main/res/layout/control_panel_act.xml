<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:fitsSystemWindows="true">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:focusable="false"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/divider"
                    android:gravity="top"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@color/primary"
                        android:visibility="visible" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/white"
                        android:elevation="4dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingStart="15dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    style="@style/ProTodo.TextView.Normal"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Mỗi ngày"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="normal" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/ic_calendar"
                                    android:backgroundTint="@color/text_light" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <com.google.android.material.chip.Chip
                                    style="@style/ProTodo.TextView.Normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1" />

                                <com.google.android.material.chip.Chip
                                    style="@style/ProTodo.TextView.Normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1" />

                                <com.google.android.material.chip.Chip
                                    style="@style/ProTodo.TextView.Normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1" />


                                <com.google.android.material.chip.Chip
                                    style="@style/ProTodo.TextView.Normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1" />


                                <com.google.android.material.chip.Chip
                                    style="@style/ProTodo.TextView.Normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1" />

                                <com.google.android.material.chip.Chip
                                    style="@style/ProTodo.TextView.Normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1" />

                                <com.google.android.material.chip.Chip
                                    style="@style/ProTodo.TextView.Normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="7" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1" />

                                <com.google.android.material.chip.Chip
                                    style="@style/ProTodo.TextView.Normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="C" />

                            </LinearLayout>


                            <androidx.appcompat.widget.AppCompatEditText
                                style="@style/ProTodo.TextView.Normal.TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:hint="Tiêu đề"
                                android:inputType="textMultiLine"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider_light" />

                            <androidx.appcompat.widget.AppCompatEditText
                                style="@style/ProTodo.TextView.Normal.TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Nội dung"
                                android:inputType="textMultiLine"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider_light" />

                            <LinearLayout
                                android:id="@+id/sound_group"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/ProTodo.TextView.Normal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Âm thanh chuông báo"
                                        android:textSize="16sp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/ProTodo.TextView.Normal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="HomeComing"
                                        android:textColor="@color/text_light"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@color/divider_light" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/sound_swt"
                                    style="@style/ProTodoSwitchCompat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:paddingStart="12dp"
                                    android:paddingEnd="12dp" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider" />

                            <LinearLayout
                                android:id="@+id/rung_group"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/ProTodo.TextView.Normal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Rung"
                                        android:textSize="16sp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/ProTodo.TextView.Normal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="Basic call"
                                        android:textColor="@color/text_light"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@color/divider_light" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/rung_swt"
                                    style="@style/ProTodoSwitchCompat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:paddingStart="12dp"
                                    android:paddingEnd="12dp" />
                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider" />

                            <LinearLayout
                                android:id="@+id/pause_group"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/ProTodo.TextView.Normal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Tạm dừng"
                                        android:textSize="16sp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/ProTodo.TextView.Normal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="5 phút, 3 lần"
                                        android:textColor="@color/text_light"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@color/divider_light" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/pause_swt"
                                    style="@style/ProTodoSwitchCompat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:paddingStart="12dp"
                                    android:paddingEnd="12dp" />
                            </LinearLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|enterAlways|snap"
                    app:navigationIcon="@drawable/ic_back"
                    app:title="Chuông báo"
                    app:titleTextColor="@color/black" />

            </com.google.android.material.appbar.AppBarLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <com.google.android.material.button.MaterialButton
                style="@style/ProTodo.TextView.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingTop="6dp"
                android:paddingEnd="25dp"
                android:paddingBottom="6dp"
                android:text="Thoát"
                android:textColor="@color/text_light"
                android:textSize="16sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="50dp"
                app:strokeColor="@color/text_light"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/ProTodo.TextView.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:backgroundTint="@color/primary"
                android:paddingStart="38dp"
                android:paddingTop="6dp"
                android:paddingEnd="38dp"
                android:paddingBottom="6dp"
                android:text="Lưu"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="50dp" />

        </LinearLayout>

    </LinearLayout>
</layout>
