<resources xmlns:ns1="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DialogFragmentTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowMinWidthMajor">85%</item>
    </style>

    <style name="ProTodo" />

    <style name="ProTodo.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/muli</item>
    </style>

    <style name="ProTodo.TextView.Normal">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="fontWeight">400</item>
        <item name="android:textColorHint">@color/text_light</item>
    </style>

    <style name="ProTodoTimePicker" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerBackground">@color/black</item>
        <item name="android:numbersTextColor">@color/primary</item>
        <item name="android:numbersSelectorColor">@color/black</item>
        <item name="android:numbersBackgroundColor">#ff555555</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">@style/ProTodo.TextView.Normal.TextView</item>

        <item name="android:amPmTextColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:colorAccent">@color/divider</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textColorSecondary">@color/dividerColor</item>

    </style>

    <style name="ProTodo.TextView.Normal.TextView">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ProTodo.TextView.Normal.EditText">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>


    <style name="TextAppearance.MaterialComponents.Normal" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>


    <style name="Action">
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="fontFamily">@font/muli</item>
    </style>

    <style name="InAction">
        <item name="android:textColorPrimary">@color/primary_light</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="fontFamily">@font/muli</item>
    </style>


    <style name="PickerColor" parent="Theme.MaterialComponents">
        <item name="colorSheetTitleFont">@font/open_sans_regular</item>
        <item name="colorSheetTitleLineHeightHint">16sp</item>
        <item name="colorSheetTitleLetterSpacing">0</item>
    </style>

    <style name="HelperTextTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/muli</item>
        <item name="fontFamily">@font/muli</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_notice</item>
    </style>

    <style name="circle">
        <item name="cornerRadius">50dp</item>
    </style>


    <style name="Halo.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="errorIconDrawable">@null</item>-->
        <item name="android:textColorHint">@color/text_light</item>
        <item name="hintTextAppearance">@style/TextInputLayoutHintTextStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="theme">@style/TextInputLayoutNormalStyle</item>
        <!--        <item name="errorTextAppearance">@style/Halo.ErrorTextInput</item>-->
        <item name="boxStrokeColor" ns1:ignore="PrivateResource" tools:ignore="PrivateResource">
            @color/divider
        </item>
        <!--        <item name="boxStrokeErrorColor" ns1:ignore="PrivateResource" tools:ignore="PrivateResource">-->
        <!--            @color/text_notice-->
        <!--        </item>-->
        <!--        <item name="helperTextTextAppearance">@style/Halo.HelperTextInput</item>-->
        <!--        <item name="boxStrokeWidthFocused">1dp</item>-->
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <!--        <item name="materialThemeOverlay">@style/OverlayFilledPadding</item>-->

    </style>

    <style name="TextInputLayoutHintTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/text_light</item>

        <item name="android:fontFamily">@font/muli</item>
        <item name="fontFamily">@font/muli</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextInputLayoutNormalStyle">
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/white</item>

        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>

        <item name="hintTextAppearance">@style/HintTextInput</item>
        <item name="errorTextAppearance">@style/ErrorTextInput</item>

    </style>

    <style name="ErrorTextInput" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_notice</item>
        <item name="android:textSize">13sp</item>

        <item name="android:fontFamily">@font/muli</item>
        <item name="fontFamily">@font/muli</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="HintTextInput" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_focus</item>
        <item name="android:textSize">15sp</item>

        <item name="android:fontFamily">@font/muli</item>
        <item name="fontFamily">@font/muli</item>
        <item name="fontWeight">500</item>
    </style>

